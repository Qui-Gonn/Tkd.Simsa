@typeparam TItem

<MudDataGrid T="TItem"
             Hover="true"
             Items="Items">
    <ToolBarContent>
        <MudButton OnClick="() => Add()"
                   StartIcon="@Icons.Material.Filled.Add">
            New
        </MudButton>
    </ToolBarContent>
    <Columns>
        @Columns
        <TemplateColumn Title="Actions">
            <CellTemplate>
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               OnClick="() => Edit(context.Item)"
                               Size="@Size.Small"/>
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               OnClick="() => Delete(context.Item)"
                               Size="@Size.Small"/>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>