@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"
                  Theme="theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Default">
        <MudIconButton Color="Color.Inherit"
                       Edge="Edge.Start"
                       Icon="@Icons.Material.Filled.Menu"
                       OnClick="DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-4">Taekwon-Do Simsa</MudText>
        <MudSpacer />
        <MudIconButton Color="Color.Inherit"
                       Edge="Edge.End"
                       Icon="@Icons.Material.Filled.MoreVert" />
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Always"
               Elevation="2"
               @bind-Open="drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>